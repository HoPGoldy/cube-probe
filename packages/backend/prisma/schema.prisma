generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../storage/dev.db"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id                  String               @id @default(uuid())
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  username            String               @unique
  email               String?              @unique
  phone               String?              @unique
  role                UserRole             @default(USER)
  isBanned            Boolean              @default(false)
  isDeleted           Boolean              @default(false)
  passwordHash        String
  webAuthnCredentials WebAuthnCredential[]
}

model Attachment {
  id        String   @id @default(uuid())
  userId    String
  filename  String
  size      Int
  hash      String
  path      String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Application {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?  @unique
  subTitle  String?
  tokenKey  String?
}

model WebAuthnCredential {
  id                  String   @id @default(uuid())
  name                String
  userId              String
  credentialID        String   @unique
  credentialPublicKey String
  counter             Int      @default(0)
  transports          String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AppConfig {
  key       String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  name         String
  url          String?
  headers      Json?
  intervalTime Int? // in seconds
  enabled      Boolean    @default(true)
  endpoints    EndPoint[]
}

model EndPoint {
  id              String        @id @default(uuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  serviceId       String
  name            String
  url             String?
  method          String?       @default("GET") // HTTP method: GET, POST, PUT, DELETE, etc.
  headers         Json?
  intervalTime    Int? // in seconds
  enabled         Boolean       @default(true)
  timeout         Int? // in milliseconds
  bodyContentType String?       @default("json") // Request body encoding: json, x-www-form-urlencoded, xml
  bodyContent     String? // Request body content
  results         ProbeResult[]

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model ProbeResult {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  endPointId   String
  status       Int?
  responseTime Int? // in milliseconds
  timestamp    DateTime
  success      Boolean
  message      String?

  endPoint EndPoint @relation(fields: [endPointId], references: [id], onDelete: Cascade)
}
