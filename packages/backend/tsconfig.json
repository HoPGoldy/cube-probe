{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": true,
    "module": "preserve",
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["./prisma/client/*"]
    }
  }
}
